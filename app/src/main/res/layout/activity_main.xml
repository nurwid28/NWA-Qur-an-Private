<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Base.ThemeOverlay.AppCompat.Dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="id.sch.smktelkom_mlg.tugas01.xirpl3025.form.MainActivity">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="354dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="0.56"
            android:background="#263238"
            android:fontFamily="GeoSlab703 MdCn BT"
            android:text="NWA-PRIVATE QURAN"
            android:textAlignment="center"
            android:textColor="@color/bright_foreground_material_dark" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="2dp"
            android:src="@drawable/q" />

        <TextView
            android:id="@+id/textViewData"
            android:layout_width="177dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="DATA PENDAFTAR"
            android:textAlignment="center"
            android:textColor="@color/background_floating_material_light" />

        <TextView
            android:id="@+id/textViewLokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Lokasi"
            android:textColor="@color/background_floating_material_light" />

        <Spinner
            android:id="@+id/spinnerProvinsi"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="#37474F"
            android:entries="@array/provinsi" />

        <TextView
            android:id="@+id/textViewNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:hint="Nama"
            android:text="Nama"
            android:textColor="#ffffff" />


        <EditText

            android:id="@+id/editTextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#37474F"
            android:textColor="@android:color/primary_text_dark" />


        <TextView
            android:id="@+id/textViewNomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:hint="Nomor Telpon"
            android:text="Nomor Telpon"
            android:textColor="@color/background_floating_material_light" />


        <EditText

            android:id="@+id/editTextTelpon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#37474F"
            android:inputType="numberSigned"
            android:textColor="@android:color/primary_text_dark" />


        <TextView
            android:id="@+id/textViewAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:hint="Alamat"
            android:text="Alamat"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/editTextAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:background="#37474F"
            android:textColor="@android:color/primary_text_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#37474F"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewJnsKelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textColor="@android:color/primary_text_dark" />

            <RadioGroup
                android:id="@+id/RadioGroupJnsKelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonPR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Perempuan"
                    android:textColor="@android:color/primary_text_dark" />

                <RadioButton
                    android:id="@+id/radioButtonLK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Laki-laki"
                    android:textColor="@android:color/primary_text_dark" />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewHari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Pilih Hari"
            android:textColor="@android:color/primary_text_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="2dp"
            android:background="#37474F"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxSnn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Senin"
                android:textColor="@android:color/primary_text_dark" />

            <CheckBox
                android:id="@+id/checkBoxSls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Selasa"
                android:textColor="@android:color/primary_text_dark" />

            <CheckBox
                android:id="@+id/checkBoxRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Rabu"
                android:textColor="@android:color/primary_text_dark" />

            <CheckBox
                android:id="@+id/checkBoxKms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Kamis"
                android:textColor="@android:color/primary_text_dark" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:hint="Jam *max 2 jam, format 24 jam"
            android:text="Jam *max 2 jam, format 24 jam"
            android:textColor="@android:color/primary_text_dark" />

        <EditText
            android:id="@+id/editTextWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:background="#37474F"
            android:textColor="@android:color/primary_text_dark" />

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:background="#18FFFF"
            android:text="Submit"
            android:textColor="#263238"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:textAlignment="center"
            android:textColor="@android:color/primary_text_dark"
            tools:text="Hasil" />

    </LinearLayout>

</ScrollView>